= form_for(@book) do |f|
  .container-fluid.col-md-3.col-offset-6.centered
    - if @book.errors.any?
      #error_explantion
        %h2
          = pluralize(@book.errors.count, "error")
          prohibited this book from being saved:
        %ul
        - @book.errors.full_messages.each do |message|
          %li= message
    .field
      = f.label :title
      %br
        = f.text_field :title
    .field
      = f.label :content
      %br
        = f.text_area :content
    .actions
      = f.submit
